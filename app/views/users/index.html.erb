<div id="tableDiv">
	<h1>Listing Users</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th>Email</th>
			<th class="adminCol">Show</th>
			<th class="adminCol">Edit</th>
			<th class="adminCol">Destroy</th>
	  </tr>

	<% @users.each do |user| %>
	  <tr>
	    <td><%=h user.name %></td>
	    <td><%=h user.email %></td>
	    <td class="adminCol"><%= link_to 'Show', user %></td>
	    <td class="adminCol"><%= link_to 'Edit', edit_user_path(user) %></td>
	    <td class="adminCol"><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'Back to Admin', admin_url %> |
	<%= link_to 'New user', new_user_path %> | 
	<%= link_to 'Logout', logout_path %>

</div>

